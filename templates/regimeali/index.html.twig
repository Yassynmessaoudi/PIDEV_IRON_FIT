{% extends 'base.html.twig' %}

{% block title %}Salledesport index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        /* Utilisez les mÃªmes styles que dans index.html.twig */
        .table-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #333;
            color: white;
            padding: 20px;
            border-radius: 10px;
        }

        .table-container table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
        }

        .table-container th,
        .table-container td {
            border: 1px solid #888;
            padding: 15px;
            text-align: left;
        }

        .table-container th {
            background-color: #555;
        }

        .table-container tr:nth-child(even) {
            background-color: #444;
        }

        .btn-info,
        .btn-warning {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
            color: white;
            margin-right: 10px;
        }

        .btn-info {
            background-color: grey;
            border: 1px solid #888;
        }

        .btn-warning {
            background-color: black;
            border: 1px solid #333;
        }

        .btn:hover {
            background-color: #ddd;
        }

        .btn-create {
            background-color: #333;
            border: 1px solid #292b2c;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="table-container">
        <h1 style="font-size: 2em; margin-bottom: 20px; color: white;">Liste des Salles de Sport</h1>

        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Prixregime</th>
                <th>Typeregime</th>
                <th>Nommed</th>
                <th>Prenommed</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for regimeali in regimealis %}
                <tr>
                    <td>{{ regimeali.id }}</td>
                    <td>{{ regimeali.prixregime }}</td>
                    <td>{{ regimeali.typeregime }}</td>
                    <td>{{ regimeali.nommed }}</td>
                    <td>{{ regimeali.prenommed }}</td>
                    <td>
                        <a href="{{ path('app_regimeali_show', {'id': regimeali.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_regimeali_edit', {'id': regimeali.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_regimeali_new') }}" class="btn btn-create">Create new</a>
    </div>
{% endblock %}
