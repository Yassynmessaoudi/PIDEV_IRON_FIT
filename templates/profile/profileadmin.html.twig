{% extends 'basecoach.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .image-container img {
        width: 350px; /* Adjust as needed */
        height: 450px;
    }
    .details-container {
        flex-grow: 1;
        padding-left: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="profile-container" style="margin-left: 300px; padding: 20px; margin-top: 50px;">
    <div class="image-container">
    <img src="{{ asset('images/' ~ coach.image) }}" alt="Profile Image">
    </div>
    <div class="details-container">
        <h2>{{ coach.username }}</h2>
        <br>
       
        <p><strong>Email: </strong>{{ coach.mail }}</p>
        <p><strong>Age: </strong>{{ coach.age }}</p>
    
        <p><strong>Sexe: </strong>{{ coach.sexe }}</p>
    </div>
</div>
{% endblock %}
