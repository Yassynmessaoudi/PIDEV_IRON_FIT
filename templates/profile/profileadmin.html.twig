{% extends 'basedb.html.twig' %}

{% block title %}ADMIN Profile{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .image-container img {
        width: 200px; /* Adjust as needed */
        height: auto;
    }
    .details-container {
        flex-grow: 1;
        padding-left: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="image-container">
        <img src="{{ asset('images/' ~ coach.image) }}" alt="Profile Image">
    </div>
    <div class="details-container">
        <h2>{{ coach.username }}</h2>
        <p><strong>Email: </strong>{{ coach.mail }}</p>
        <p><strong>Age: </strong>{{ coach.age }}</p>
        <p><strong>Role: </strong>{{ coach.role }}</p>
        <p><strong>Sexe: </strong>{{ coach.sexe }}</p>
    </div>
</div>
{% endblock %}
