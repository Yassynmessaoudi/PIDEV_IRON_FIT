{% extends 'basedb.html.twig' %}

{% block title %}Détails du produit{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white text-center">
                        <h1>Détails du produit</h1>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ product.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom du produit</th>
                                    <td>{{ product.productName }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ product.description }}</td>
                                </tr>
                                <tr>
                                    <th>Image</th>
                                    <td>
                                         {% if product.image is not null %}
    {% set imagePath = '/' ~ vich_uploader_asset(product, 'imageFile') %}
    <img src="{{ imagePath }}" alt="Product Image" class="img-thumbnail" width="150" height="100">
{% else %}
    Image non disponible
{% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Prix</th>
                                    <td>{{ product.price }}</td>
                                </tr>
                                <tr>
                                    <th>Quantité en stock</th>
                                    <td>{{ product.quantityInStock }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_product_index') }}" class="btn btn-dark">Retour à la liste</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-danger">Modifier</a>
                    </div>
                </div>
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
