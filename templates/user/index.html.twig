{% extends 'basedb.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Age</th>
                <th>Username</th>
                <th>Mail</th>
                <th>Role</th>
                <th>Sexe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.idUser }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.sexe }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'idUser': user.idUser}) }}" class="btn btn-warning">show</a>
                    <a href="{{ path('app_user_edit', {'idUser': user.idUser}) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class=" col-3 btn btn-success">Create new</a>
{% endblock %}
