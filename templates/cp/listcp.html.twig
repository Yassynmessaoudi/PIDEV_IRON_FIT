{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-container" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; margin-left: 300px; padding: 20px; margin-top: 50px;">
        {% for codepromos in codepromos %}
            <div class="grid-item" style="background-color: #666; color: white; padding: 15px; border-radius: 5px;">
                <h3>{{ codepromos.code }}</h3>
                <p><strong>Date d'expiration:</strong> {{ codepromos.datedexpiration }}</p>
                <p><strong>Description:</strong> {{ codepromos.description }}</p>
               
            </div>
        {% endfor %}
    </div>

    <div align="center" style="margin-left: 300px; margin-top: 20px;">
    
    
        
        
        
    </div>
{% endblock %}
