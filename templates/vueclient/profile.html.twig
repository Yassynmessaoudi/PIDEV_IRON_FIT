{% extends 'base.html.twig' %}

{% block title %}Client Profile{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .image-container img {
        width: 350px; /* Adjust as needed */
        height: 450px;
    }
    .details-container {
        flex-grow: 1;
        padding-left: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="image-container">
        <img src="{{ asset('images/' ~ client.image) }}" alt="Profile Image">
    </div>
    <div class="details-container">
        <h2>{{ client.username }}</h2>
        <br>
       
        <p><strong>Email: </strong>{{ client.mail }}</p>
        <p><strong>Age: </strong>{{ client.age }}</p>
    
        <p><strong>Sexe: </strong>{{ client.sexe }}</p>
    </div>
</div>
{% endblock %}
