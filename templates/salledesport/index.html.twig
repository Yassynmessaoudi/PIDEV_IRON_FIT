{% extends 'basedb.html.twig' %}

{% block title %}Salledesport index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
       
        .table-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: white; 
            color: black;
            padding: 20px;
            border-radius: 10px;
            border: 2px solid black;
        }

        .table-container table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
            color: black; 
        }

        .table-container th,
        .table-container td {
            border: 2px solid black; 
            padding: 15px;
            text-align: left;
        }

        .table-container th {
            background-color: white; 
        }

        .table-container tr:nth-child(even) {
            background-color: white; 
        }

        .table-container tr:nth-child(odd) {
            background-color: #eee; 
        }

        .btn-info,
        .btn-warning {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
            color: white; 
            margin-right: 10px;
        }

        .btn-info {
            background-color: grey;
            border: 1px solid #888;
        }

        .btn-warning {
            background-color: black;
            border: 1px solid #333;
        }

        .btn:hover {
            background-color: #ddd;
        }

        .btn-create {
            background-color: #333;
            border: 1px solid #292b2c;
            margin-top: 20px;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="table-container content-wrapper" style="margin-left: 300px; padding: 20px; margin-top: 50px;">
        <h1 style="font-size: 2em; margin-bottom: 20px; color: black;">Liste des Salles de Sport</h1>
<form action="{{ path('app_salledesport_index') }}" method="GET" style="margin-bottom: 20px;">
    <div style="display: flex; gap: 10px;">
        <input type="text" name="nom" placeholder="Nom" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
        <input type="text" name="adresse" placeholder="Adresse" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
        <input type="number" name="capacite" placeholder="Capacité" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
        <input type="text" name="specialite" placeholder="Spécialité" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
        <button type="submit" style="padding: 8px 15px; border-radius: 5px; background-color: #333; color: white; border: none; cursor: pointer;">Rechercher</button>
    </div>
</form>
        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
             
                <th>Nom</th>
                <th>Adresse</th>
                <th>Capacite</th>
                <th>Specialite</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
         {% for message in app.flashes('success') %}
                 <div class="alert alert-success">
                       {{ message }}
                  </div>
                  {% endfor %}
            {% for salledesport in salledesports %}
                <tr>
          
                    <td>{{ salledesport.nom }}</td>
                    <td>{{ salledesport.adresse }}</td>
                    <td>{{ salledesport.capacite }}</td>
                    <td>{{ salledesport.specialite }}</td>
                    <td>
                        <a href="{{ path('app_salledesport_show', {'idsalledesport': salledesport.idsalledesport}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_salledesport_edit', {'idsalledesport': salledesport.idsalledesport}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_salledesport_new') }}" class="btn btn-create">Créer une nouvelle salle de sport</a>
       <a href="{{ path('app_tempback') }}" class="btn btn-back">Retour</a>
  
       <a href="{{ path('app_salledesport_export_table_pdf') }}" class="btn btn-primary">Exporter vers PDF</a>

    

    </div>
    <script>
    document.getElementById('export-pdf-button').addEventListener('click', function(event) {
        event.preventDefault(); 
        
       
        const pdfUrl = this.getAttribute('href');
        
        
        window.open(pdfUrl, '_blank');
    });
</script>
{% endblock %}
