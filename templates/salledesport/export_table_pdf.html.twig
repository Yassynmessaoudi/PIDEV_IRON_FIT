
 <style>
       
        .table-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: white; 
            color: black;
            padding: 20px;
            border-radius: 10px;
            border: 2px solid black;
        }

        .table-container table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
            color: black; 
        }

        .table-container th,
        .table-container td {
            border: 2px solid black; 
            padding: 15px;
            text-align: left;
        }

        .table-container th {
            background-color: white; 
        }

        .table-container tr:nth-child(even) {
            background-color: white; 
        }

        .table-container tr:nth-child(odd) {
            background-color: #eee; 
        }

        .btn-info,
        .btn-warning {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
            color: white; 
            margin-right: 10px;
        }

        .btn-info {
            background-color: grey;
            border: 1px solid #888;
        }

        .btn-warning {
            background-color: black;
            border: 1px solid #333;
        }

        .btn:hover {
            background-color: #ddd;
        }

        .btn-create {
            background-color: #333;
            border: 1px solid #292b2c;
            margin-top: 20px;
            color: white;
        }
    </style>
     <div class="table-container content-wrapper" >
        <h1 style="font-size: 2em; margin-bottom: 20px; color: black;">Liste des Salles de Sport</h1>
 <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Capacite</th>
                <th>Specialite</th>
             
            </tr>
            </thead>
            <tbody>
            {% for salledesport in salledesports %}
                <tr>
                    <td>{{ salledesport.nom }}</td>
                    <td>{{ salledesport.adresse }}</td>
                    <td>{{ salledesport.capacite }}</td>
                    <td>{{ salledesport.specialite }}</td>
                    
                      
                    
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
         <a href="{{ path('app_salledesport_export_table_pdf') }}" class="btn btn-primary"></a>
          </div>
