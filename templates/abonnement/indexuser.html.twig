{% extends 'base.html.twig' %}

{% block title %}Liste des Abonnements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        .btn {
            display: inline-block;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
            color: white; 
        }

      
        .btn-info {
            background-color: grey; 
            border: 1px solid #888; 
        }

      
        .btn-warning {
            background-color: black; 
            border: 1px solid #333; 
        }

       
        .btn-dark {
            background-color: #333; 
            border: 1px solid #292b2c;
        }

   
        .btn:hover {
            background-color: #ddd;
        }

      
        .table-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #333; 
            color: white; 
            padding: 20px; 
            border-radius: 10px; 
        }

      
        .table-container table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
        }

        .table-container th, .table-container td {
            border: 1px solid #888;
            padding: 15px; 
            text-align: left;
        }

        .table-container th {
            background-color: #555; 
        }

        .table-container tr:nth-child(even) {
            background-color: #444; 
        }
     </style>
  {% endblock %}

  {% block body %}
      <div class="table-container">
          <h1 style="font-size: 2em; margin-bottom: 20px; color: white;">Liste des Abonnements</h1>
<form action="{{ path('app_abonnement_indexuser') }}" method="GET" style="margin-bottom: 20px;">
    <div style="display: flex; gap: 10px;">
        <input type="text" name="type" placeholder="Type" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
        <input type="number" name="prix" placeholder="Prix" style="padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
        <button type="submit" style="padding: 8px 15px; border-radius: 5px; background-color: #333; color: white; border: none; cursor: pointer;">Rechercher</button>
    </div>
</form>
          <table class="table table-bordered">
              <thead class="thead-dark">
                  <tr>
         
                      <th>Type</th>
                      <th>Date de d√©but</th>
                      <th>Date de fin</th>
                      <th>Prix</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                  {% for message in app.flashes('success') %}
                 <div class="alert alert-success">
                       {{ message }}
                  </div>
                  {% endfor %}
                  {% for abonnement in abonnements %}
                      <tr>
                          <td>{{ abonnement.type }}</td>
                          <td>{{ abonnement.datedebut|date('Y-m-d') }}</td>
                          <td>{{ abonnement.datefin|date('Y-m-d') }}</td>
                          <td>{{ abonnement.prix }}</td>
                          <td>
                              <a href="{{ path('app_abonnement_showuser', {'id': abonnement.id}) }}" class="btn btn-info">Voir</a>
                      

                         
                              
                          </td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
          <a href="{{ path('homepage') }}" class="btn btn-back">Retour home</a>
          <p>Le nombre total d'abonnement est : {{ totalabonnement }}</p>
          
      </div>
  {% endblock %}
