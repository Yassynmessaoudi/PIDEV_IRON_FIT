{% extends 'basedb.html.twig' %}

{% block title %}Planning{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        /* Utilisez les mêmes styles que dans index.html.twig */
        .table-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: white; /* Changement de la couleur du fond du conteneur */
            color: black;
            padding: 20px;
            border-radius: 10px;
            border: 2px solid black; /* Bordure noire */
        }

        .table-container table {
            margin-top: 20px;
            border-collapse: collapse;
            width: 100%;
            color: black; /* Contenu du tableau en noir */
        }

        .table-container th,
        .table-container td {
            border: 2px solid black; /* Bordure noire */
            padding: 15px;
            text-align: left;
        }

        .table-container th {
            background-color: white; /* Fond blanc pour l'en-tête */
        }

        .table-container tr:nth-child(even) {
            background-color: white; /* Fond blanc pour les lignes paires */
        }

        .table-container tr:nth-child(odd) {
            background-color: #eee; /* Fond gris clair pour les lignes impaires */
        }

        .btn-info,
        .btn-warning {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
            color: white; /* Changement de la couleur du texte des boutons en blanc */
            margin-right: 10px;
        }

        .btn-info {
            background-color: grey;
            border: 1px solid #888;
        }

        .btn-warning {
            background-color: black;
            border: 1px solid #333;
        }

        .btn:hover {
            background-color: #ddd;
        }

        .btn-create {
            background-color: #333;
            border: 1px solid #292b2c;
            margin-top: 20px;
            color: white; /* Changement de la couleur du texte du bouton en blanc */
        }
    </style>
{% endblock %}

{% block body %}
   <div class="table-container content-wrapper" style="margin-left: 300px; padding: 20px; margin-top: 50px;">
        <h1 style="font-size: 2em; margin-bottom: 20px; color: white;">Planning</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>IdPlanning</th>
                    <td>{{ planning.idplanning }}</td>
                </tr>
                <tr>
                    <th>NiveauProgramme</th>
                    <td>{{ planning.niveauprogramme }}</td>
                </tr>
                <tr>
                    <th>Programme</th>
                    <td>{{ planning.programme }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ planning.prix }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td style="display: flex; justify-content: center;">
                       <img src="data:image/png;base64,{{ base64Image }}" alt="Image" style="width: 300px; height: 250px;">
                     </td>


                </tr>
                <tr>
                    <th>VideoLink</th>
                    <td>{{ planning.videolink }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ planning.description }}</td>
                </tr>
                <tr>
                    <th>Inscriptions</th>
                    <td>{{ planning.views }}</td>
                </tr>
                <tr>
                    <th>IdCoach</th>
                    <td>{{ planning.idCoach }}</td>
                </tr>
            </tbody>
        </table>

        <div style="display: flex; justify-content: space-between; width: 100%;">
            <a href="{{ path('app_planning_index') }}" class="btn btn-back">Retour à la liste</a>
            <a href="{{ path('app_planning_edit', {'idplanning': planning.idplanning}) }}" class="btn btn-edit">Modifier</a>
        </div>

        {{ include('planning/_delete_form.html.twig') }}
    </div>
{% endblock %}